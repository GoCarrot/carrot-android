<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/title"
        android:layout_marginRight="@dimen/teak_notification_ios_icon_width"
        android:layout_marginEnd="@dimen/teak_notification_ios_icon_width"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:textAppearance="@style/Teak.Notification.TitleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/subtitle"
        android:layout_marginRight="@dimen/teak_notification_ios_icon_width"
        android:layout_marginEnd="@dimen/teak_notification_ios_icon_width"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/right_image"
        android:layout_toEndOf="@id/right_image"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:textAppearance="@style/Teak.Notification.SubtitleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/text"
        android:layout_marginRight="@dimen/teak_notification_ios_icon_width"
        android:layout_marginEnd="@dimen/teak_notification_ios_icon_width"
        android:layout_below="@id/subtitle"
        android:layout_toRightOf="@id/right_image"
        android:layout_toEndOf="@id/right_image"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="3"
        android:textAppearance="@style/Teak.Notification.MessageText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView android:id="@+id/right_image"
        android:layout_width="@dimen/teak_notification_ios_icon_width"
        android:layout_height="@dimen/teak_notification_ios_icon_height"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
