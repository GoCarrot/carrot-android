<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:amazon="http://schemas.amazon.com/apk/res/android"
    package="com.teakio.pushtest">
    <uses-sdk android:targetSdkVersion="23" />

    <uses-permission android:name="com.android.vending.BILLING" />

    <permission android:name="com.teakio.pushtest" android:protectionLevel="signature"/>
    <uses-permission android:name="com.teakio.pushtest.permission.C2D_MESSAGE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>

    <!-- ADM Stuff -->
    <permission
        android:name="com.teakio.pushtest.permission.RECEIVE_ADM_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.teakio.pushtest.permission.RECEIVE_ADM_MESSAGE" />
    <uses-permission android:name="com.amazon.device.messaging.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- End ADM Stuff -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="io.teak.sdk.Teak"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <action android:name="com.teakio.pushtest.intent.TEAK_NOTIFICATION_OPENED" />
                <action android:name="com.teakio.pushtest.intent.TEAK_NOTIFICATION_CLEARED" />
                <category android:name="com.teakio.pushtest" />
            </intent-filter>
        </receiver>

        <amazon:enable-feature
            android:name="com.amazon.device.messaging"
            android:required="false"/>
        <service android:name="io.teak.sdk.ADMMessageHandler"
            android:exported="false" />
        <receiver
            android:name="io.teak.sdk.ADMMessageHandler$MessageAlertReceiver"
            android:permission="com.amazon.device.messaging.permission.SEND" >
            <intent-filter>
                <action android:name="com.amazon.device.messaging.intent.REGISTRATION" />
                <action android:name="com.amazon.device.messaging.intent.RECEIVE" />
                <category android:name="com.teakio.pushtest" />
            </intent-filter>

        </receiver>
    </application>
</manifest>