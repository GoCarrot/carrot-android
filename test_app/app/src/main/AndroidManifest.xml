<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.teak.app.test">

    <!-- Push notification permissions -->
    <uses-permission android:name="io.teak.app.test.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="io.teak.app.test.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <!-- Teak-required permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Purchase permission -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="teakangrybots.jckpt.me" />
                <data android:scheme="https" android:host="teakangrybots.jckpt.me" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="teak1919749661621253" android:host="*" />
            </intent-filter>
        </activity>

        <!-- This is Teak's core Broadcast Listener -->
        <receiver
            android:name="io.teak.sdk.Teak"
            android:exported="true">

            <!-- Removed android:permission="com.google.android.c2dm.permission.SEND" for automated testing -->
            <intent-filter>
                <action android:name="io.teak.app.test.intent.TEAK_NOTIFICATION_OPENED" />
                <action android:name="io.teak.app.test.intent.TEAK_NOTIFICATION_CLEARED" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="io.teak.app.test" />
            </intent-filter>
        </receiver>

        <!-- This listener is used by some versions of GCM, and will tell Teak to re-generate the GCM token -->
        <service
            android:name="io.teak.sdk.InstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>

        <!-- This is Teak's internal exception reporting service, it allows the Teak SDK to self-report exceptions. -->
        <service
            android:name="io.teak.sdk.service.RavenService"
            android:exported="false"
            android:process=":teak.raven" />
    </application>
</manifest>
